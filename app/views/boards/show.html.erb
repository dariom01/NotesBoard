        I am a note
      </div>
  <% end%>
      <%= form_for([section, section.notes.build]) do |f| %>
          <p>
            <%= f.label :body %><br>
            <%= f.text_area :body %>
          </p>
          <p>
            <%= f.submit %>
          </p>

         <% end %>



      </div>
  <% end %>
</div>
