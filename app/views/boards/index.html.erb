<h1>Listing boards</h1>
<%= link_to 'New board', new_board_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
	<th></th>
	<th></th>
  </tr>

  <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.description %></td>
        <td><%= link_to 'Show', board_path(board) %></td>
		<td><%= link_to 'Edit', edit_board_path(board) %></td>
		<td><%= link_to 'Destroy', board_path(board),method: :delete,data: {confirm:'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>