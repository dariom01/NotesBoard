<h1>Listing articles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>

  <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.description %></td>
        <td><%= link_to 'Show', board_path(board) %></td>
      </tr>
  <% end %>
</table>